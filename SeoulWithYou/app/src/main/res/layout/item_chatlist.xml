<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_img"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/face_2" />

            <TextView
                android:id="@+id/yourNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/profile_img"
                android:text="빌게이츠"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginBottom="3dp"/>

            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="오후 12:34"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/lastMessageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/profile_img"
                android:layout_below="@+id/yourNameTextView"
                android:text="난 오늘 100000000억을 벌었어 ㅎㅅㅎ 너 조금 줄까? 싫어ㅠㅠ 난 완전 부자야 부럽지? 난 내 전재산을 박태임한테 물려줄꺼야!!!"
                android:maxLines="2"
                android:textSize="13dp"
                android:textColor="#585858"/>


        </RelativeLayout>

</RelativeLayout>