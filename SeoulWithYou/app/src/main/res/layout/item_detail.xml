<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="20dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/detailItem">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_marginLeft="4dp"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/courseNum"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/fontColor"/>

                <TextView
                    android:layout_marginBottom="2dp"
                    android:layout_alignBottom="@id/courseNum"
                    android:layout_toRightOf="@id/courseNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tmp2"
                    android:text="코스  "
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/fontColor"/>

                <TextView
                    android:layout_marginBottom="2dp"
                    android:layout_alignBottom="@id/tmp2"
                    android:textSize="12dp"
                    android:textColor="@android:color/black"
                    android:layout_toRightOf="@+id/tmp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detailCourseName"/>

                <View
                    android:layout_marginLeft="4dp"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_below="@id/detailCourseName"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/colorPrimary"
                    android:id="@+id/tmp3"/>

                <TextView
                    android:layout_margin="4dp"
                    android:textSize="10dp"
                    android:layout_below="@+id/tmp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detailExplanation"/>

            </RelativeLayout>

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/detailPic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>