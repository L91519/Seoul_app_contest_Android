<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/courseItem"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:layout_width="250dp"
    android:padding="10dp"
    app:cardCornerRadius="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <ImageView
            android:background="@android:color/black"
            android:id="@+id/imageView"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:id="@+id/courseNameText"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14dp" />

            <RelativeLayout
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content">

                <TextView
                    android:id="@+id/tmp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:text="총거리 "
                    android:textColor="@color/fontColor"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/courseDistanceText"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/tmp"
                    android:layout_width="wrap_content"
                    android:text="hello"
                    android:textColor="@color/fontColor"
                    android:textSize="12dp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/courseDistanceText"
                    android:layout_width="wrap_content"
                    android:textColor="@color/fontColor"
                    android:textSize="12dp" />

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

